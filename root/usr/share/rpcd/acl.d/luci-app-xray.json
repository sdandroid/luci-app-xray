{
    "luci-app-xray": {
        "description": "Grant access to xray configurations",
        "read": {
            "uci": [
                "xapp"
            ],
            "file": {
                "/etc/init.d/xapp": [ "exec" ],
                "/var/run/xray.pid": [ "read" ]
            }
        },
        "write": {
            "uci": [
                "xapp"
            ]
        }
    }
}